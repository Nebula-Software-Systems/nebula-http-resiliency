{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/src/@common/*": ["src/@common/*"],
            "@/src/retry/*": ["src/retry/*"],
            "@/src/timeout/*": ["src/timeout/*"],
            "@/src/circuit-breaker/*": ["src/circuit-breaker/*"],
        },
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "Node10",
        "module": "CommonJS",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}